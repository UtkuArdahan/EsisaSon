<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.bireyselAlici.bireyselAliciSepetim.BireyselAliciSepetimFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/cartToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/cartActualToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="Sepetim"
            app:titleCentered="true"
            />


    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/llCartPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayishWhite"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#3E3A3A"
            android:padding="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Toplam Fiyat"
                android:textColor="@color/greyishtext" />

            <TextView
                android:id="@+id/tvLastTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13198 TL"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCartCheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="Ödemeye Geç"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="175dp"
        android:layout_height="123dp"
        android:src="@drawable/apple_watch"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="90dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="175dp"
        android:layout_height="123dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ayakkabi_lacoste"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="228dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10499"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="137dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2699"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="295dp" />


</androidx.constraintlayout.widget.ConstraintLayout>