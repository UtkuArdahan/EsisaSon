<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.kurumsalAlici.detaylar.SamsungBudsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@id/llBottomDetails"

        tools:ignore="SpeakableTextPresentCheck">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/samsung_airpods"
                app:layout_constraintBottom_toTopOf="@id/llBottomDetails"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llBottomDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1"
        android:elevation="10dp"

        android:background="@drawable/custom_bnv"
        >

        <TextView
            android:id="@+id/tvDetailsProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samsung Buds 2 Siyah R177 Kablosuz Kulaklık"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:textStyle="bold"
            android:textColor="@color/black"
            />




        <TextView
            android:id="@+id/tvDetailsProductDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:text="Kulaklık Tipi: Kanal İçiKullanım Alanı: Müzik TelefonUyumluluk:Android IOSSesli Asistan Desteği:VarSesli Asistan Özelliği:Bixby AsistanSensör: Dokunmatik Sensör Hall Sensörü Hareket Sensörü Jiroskop Konuşma Algılama Sensörü Yakınlık SensörüÖzellikler: Derin Bas Dolby Atmos Dolby Head Tracking Güçlü Bas Ortam Sesi ModuSes Çıkışı: StereoÇevresel Ses:VarÇevresel Ses Özelliği:360 AudioGürültü Engelleme:Aktif Gürültü ÖnlemeSürücü Çapı: 11 mmSürücü Özellikleri: Dinamik SürücülüBağlantı Tipi: Tam KablosuzBluetooth: VarBluetooth Standardı: 5.0Bluetooth Profili:A2DP AVRCP HFPBluetooth Özellikleri: AAC SBCNFC: YokÇoklu Bağlantı: VarKullanım Süresi (Genel):8 saatKullanım Süresi (Yoğun): 5 saatKullanım Süresi (Şarj Kutusu): 20 saatŞarj Tipi:Kablosuz Şarj KutusuHızlı Şarj: VarHızlı Şarj Süresi:5 dkHızlı Şarj Kullanım Süresi:1 saAkustik Yapı: KapalıMikrofon:VarMikrofon Özelliği: Gürültü Engelleyici Mikrofon 6 MikrofonluKumanda: VarKumanda İşlevi: Çağrı Kontrol Müzik KontrolAğırlık:10 gAğırlık (Şarj Kutusu):41.2 g"
            android:padding="3dp"
            android:textColor="@color/greyishtext"
            />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fiyat"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:textColor="@color/greyishtext"
                    />

                <TextView
                    android:id="@+id/tvDetailsProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1399"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDetailsAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sepete Ekle"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:padding="15dp"
                android:background="@drawable/custom_button"
                />


        </LinearLayout>


    </LinearLayout>












</androidx.constraintlayout.widget.ConstraintLayout>