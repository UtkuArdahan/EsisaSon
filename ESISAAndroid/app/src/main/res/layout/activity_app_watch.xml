<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.kurumsalAlici.detaylar.AppWatchActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@id/llBottomDetails"

        tools:ignore="SpeakableTextPresentCheck">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/apple_watch"
                app:layout_constraintBottom_toTopOf="@id/llBottomDetails"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llBottomDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1"
        android:elevation="10dp"

        android:background="@drawable/custom_bnv"
        >

        <TextView
            android:id="@+id/tvDetailsProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple Watch Series 8 45mm GPS Gece Yarısı Alüminyum Kasa ve Spor Kordon-Regular"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:textStyle="bold"
            android:textColor="@color/black"
            />




        <TextView
            android:id="@+id/tvDetailsProductDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:text="Marka: Apple Ürün ailesi: Watch Ürün Serisi: Series 8 Ürün adı: Watch Series 8 Ürün kodu: MNP13TU/A EAN/UPC kodu: 0194253149309  Akıllı saat Dijital Dokunmatik ekran OLED 396 x 484 Piksel 1000 cd/m² Toza dayanıklı IP6X Su geçirmeme derecesi: 50 m Dahili mikrofon Gömme hoparlörler Kalp frekans monitörü Hız ölçer Jiroskop Aktivite izleyici Apple Siri GPS BeiDou GLONASS Galileo Yarı-Zenit Uydu Sistemi (QZSS) Wi-Fi Bluetooth 5.0 Yakın Alan İletişimi Lityum-İyon (Li-Ion) 18 Saat"
            android:padding="3dp"
            android:textColor="@color/greyishtext"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fiyat"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:textColor="@color/greyishtext"
                    />

                <TextView
                    android:id="@+id/tvDetailsProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDetailsAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sepete Ekle"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:padding="15dp"
                android:background="@drawable/custom_button"
                />


        </LinearLayout>


    </LinearLayout>












</androidx.constraintlayout.widget.ConstraintLayout>